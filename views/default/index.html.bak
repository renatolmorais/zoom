{{extend 'zoom_layout.html'}}
<div class="jumbotron">
    <h1>{{=h1}}</h1>
    <h3>{{=h3}}</h3>
    <p>{{=p}}</p>
    <div class="container">
        <form class="form-horizontal" action="{{=URL('email')}}" method="post">
            <div class="form-group">
                <label for="nome">Nome:&nbsp</label>
                <input class="form-control" type="text" name="nome" id="nome" placeholder="Seu nome..." required>
            </div>
            <div class="form-group">
                
            </div>
            <div class="form-group">
                <label for="email">E-mail:&nbsp</label>
                <input class="form-control" type="email" name="email" id="email" placeholder="Seu e-email..." required>
            </div>
            <button type="submit" class="btn btn-danger">Enviar</button>
        </form>
    </div>
</div>
